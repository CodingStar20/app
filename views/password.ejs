<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/header.ejs",{title:"Change password"}) %>
        <style>
            * {
                margin: 0;
                padding: 0;

            }

            .pass {
                height: 100vh;
                width: 100%;
                font-family: sans-serif;
                font-size: 1.5rem;
                padding-top: 6%;
                display: flex;
                background-color: #361500;
                color: whitesmoke;

                justify-content: space-around;
            }

            .row {
                width: 40rem;
                padding-top: 0rem;
            }

            .col-md-12 form {
                display: flex;
                flex-direction: column;
            }

            .alert.alert-danger.alert-dismissible.fade.show.text-dark,
            .alert.alert-success.alert-dismissible.fade.show.text-dark {
                width: 100%;
                height: 3rem;
            }

            .row .alert+.col-md-12 {
                margin-top: -15rem;
            }
        </style>
</head>

<body>

    <div class="container-fluid pass" style="background-color: #361500;">

        <div class="row">
            <%- include("./message.ejs") %>
                <div class="col-md-12 ">
                    <form action="/change" method="POST">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="email">
                        <label for="cpassword">Confirm Password</label>
                        <input type="password" class="form-control" name="cpassword" id="email">
                        <button type="submit" class="btn btn-success mt-2">Update Password</button>
                    </form>
                </div>
        </div>
    </div>

</body>

</html>