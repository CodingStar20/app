<!DOCTYPE html>
<html lang="en">

<head>

    <%- include("./partials/header.ejs",{title:"password"}) %>

        <style>
            * {
                margin: 0;
                padding: 0;

            }

            .pass {
                height: 100vh;
                width: 100%;
                font-family: sans-serif;
                font-size: 1.5rem;
                padding-top: 6%;
                display: flex;
                color: whitesmoke;
                background-color: #361500;
                justify-content: space-around;
            }

            .row {
                width: 40rem;
                padding-top: 0rem;
            }

            .col-md-12 form {
                display: flex;
                flex-direction: column;
            }

            .row .alert.alert-success.alert-dismissible.fade.show.text-dark,
            .alert.alert-danger.alert-dismissible.fade.show.text-dark {
                width: 100%;
                height: 3rem;
                font-size: 1rem;
            }

            .row .alert+.col-md-12 {
                margin-top: -15rem;
            }
        </style>

</head>

<body>

    <div class="container-fluid pass">

        <div class="row">
            <%- include("./message.ejs") %>
                <div class="col-md-12">
                    <form action="/updatepass" method="post">

                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" id="email">
                        <button type="submit" class="btn btn-success mt-2">Get Link</button>
                    </form>
                </div>
        </div>
    </div>

</body>

</html>